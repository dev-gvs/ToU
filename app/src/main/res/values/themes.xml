<resources>
    <!-- Base application theme. -->
    <style name="Theme.ToU" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="tabStyle">@style/Theme.ToU.TabLayout</item>
        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="Theme.ToU.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">?colorOnPrimary</item>
        <item name="tabBackground">?colorPrimary</item>
        <item name="tabSelectedTextColor">?colorOnPrimary</item>
        <item name="tabTextColor">@color/white_medium_emphasis</item>
    </style>

    <style name="Theme.ToU.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ToU.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ToU.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
